/dts-v1/;

#include <espressif/esp32s3/esp32s3_wroom_n16r8.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <zephyr/dt-bindings/input/esp32-touch-sensor-input.h>
#include <espressif/partitions_0x0_amp.dtsi>
#include "tdeck-pinctrl.dtsi"

/ {
	model = "Espressif ESP32S3-DevkitC PROCPU";
	compatible = "espressif,esp32s3";

	aliases {
		i2c-0 = &i2c0;
		watchdog0 = &wdt0;
		led0 = &backlight;
		stuffenable = &stuffenable;
	};

	chosen {
		zephyr,sram = &sram1;
		zephyr,console = &usb_serial;
		zephyr,shell-uart = &usb_serial;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,bt-hci = &esp32_bt_hci;
		zephyr,display = &st7789v;
	};

	aliases {
		uart-0 = &uart0;
		sw0 = &button0;
	};

	leds {
		compatible = "gpio-leds";
		backlight: backlight_0 {
			gpios = <&gpio1 10 (GPIO_ACTIVE_HIGH)>; // IO42
			label = "Screen Backlight GPIO";
		};
		stuffenable: stuffenable0 {
			gpios = <&gpio0 10 (GPIO_ACTIVE_HIGH)>; // IO10
			label = "Stuff enable GPIO";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 0 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "BOOT Button";
			zephyr,code = <INPUT_KEY_0>;
		};

		button_left: button_left {
			gpios = <&gpio0 1 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Left Button";
			zephyr,code = <INPUT_KEY_0>;
		};
		button_right: button_right {
			gpios = <&gpio0 15 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Right Button";
			zephyr,code = <INPUT_KEY_0>;
		};

		button_up: button_up {
			gpios = <&gpio0 2 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Up Button";
			zephyr,code = <INPUT_KEY_0>;
		};
		button_down: button_down {
			gpios = <&gpio0 3 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Right Button";
			zephyr,code = <INPUT_KEY_0>;
		};
	};

	mipi{
		compatible = "zephyr,mipi-dbi-spi";

			spi-dev = <&spi3>;
			dc-gpios = <&gpio0 11 GPIO_ACTIVE_HIGH>;
			// reset-gpios = <&arduino_header 14 GPIO_ACTIVE_LOW>;
			write-only;
			#address-cells = <1>;
			#size-cells = <0>;


			st7789v: st7789v@0 {
				compatible = "sitronix,st7789v";
				reg = <0>;
				mipi-mode = "MIPI_DBI_MODE_SPI_4WIRE";
				mipi-max-frequency = <20000000>;

				vcom = <0x28>;
				gctrl = <0x35>;
				vrhs = <0x10>;
				vdvs = <0x20>;

				/* Landscape */
				width = <320>;
				height = <240>;
				x-offset = <0>; // ?
				y-offset = <0>; // ?
				mdac = <0x60>; // ?

				gamma = <0x01>; // ?
				colmod = <0x55>; // ?
				lcm = <0x2C>; // ?
				porch-param = [0C 0C 00 33 33]; // ?
				cmd2en-param = [5A 69 02 01]; // ?
				pwctrl1-param = [A4 A1]; // ?
				pvgam-param = [D0 00 02 07 0A 28 32 44 42 06 0E 12 14 17]; // ?
				nvgam-param = [D0 00 02 07 0A 28 31 54 47 0E 1C 17 1B 1E]; // ?
				ram-param = [00 E0]; //?
				rgb-param = [CD 08 14]; //?
		};
	};
};

&usb_serial {
	status = "okay";
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-names = "default";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&touch {
	debounce-interval-ms = <30>;
	href-microvolt = <2700000>;
	lref-microvolt = <500000>;
	href-atten-microvolt = <1000000>;
	filter-mode = <ESP32_TOUCH_FILTER_MODE_IIR_16>;
	filter-debounce-cnt = <1>;
	filter-noise-thr = <ESP32_TOUCH_FILTER_NOISE_THR_4_8TH>;
	filter-jitter-step = <4>;
	filter-smooth-level = <ESP32_TOUCH_FILTER_SMOOTH_MODE_IIR_2>;
};

&i2c0 {
	clock-frequency = <I2C_BITRATE_STANDARD>;
	pinctrl-0 = <&i2c0_default>;
	pinctrl-names = "default";
	status = "okay";
};

&i2c1 {
	clock-frequency = <I2C_BITRATE_STANDARD>;
	pinctrl-0 = <&i2c1_default>;
	pinctrl-names = "default";
};

&i2s0 {
	pinctrl-0 = <&i2s0_default>;
	pinctrl-names = "default";
	status = "disabled";
};

&i2s1 {
	pinctrl-0 = <&i2s1_default>;
	pinctrl-names = "default";
	status = "disabled";
};

&spi2 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";
	pinctrl-0 = <&spim2_default>;
	pinctrl-names = "default";
};




&spi3 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";
	pinctrl-0 = <&spim3_default>;
	pinctrl-names = "default";
	status = "okay";

	// LCD CS, LORA CS
	cs-gpios = <&gpio0 12 GPIO_ACTIVE_LOW>, <&gpio0 9 GPIO_ACTIVE_LOW>;
};

&twai {
	pinctrl-0 = <&twai_default>;
	pinctrl-names = "default";
};

&timer0 {
	status = "disabled";
};

&timer1 {
	status = "disabled";
};

&timer2 {
	status = "disabled";
};

&timer3 {
	status = "disabled";
};

&wdt0 {
	status = "okay";
};

&trng0 {
	status = "okay";
};

&esp32_bt_hci {
	status = "okay";
};
